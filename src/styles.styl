.btn {
    color: #fff;
    background: transparent;
    display: inline-flex;
    min-width: 180px;
    text-align: center;
    height: 50px;
    justify-content: center;
    align-items: center;
    font-weight: 600;
    border: 2px #fff solid;
    font-family: 'Poppins', sans-serif;
    font-size: 18px;
    font-weight: 400;
    padding: 0 20px;

